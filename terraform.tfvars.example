# Basic Configuration
app_name = "Acme"
env_name = "prod"

# App Customization - Frontend Content
app_title = "Your Custom Chatbot"
app_description = "AI-powered assistant for your business"
app_login_subtitle = "Sign in to access your AI assistant"
app_input_placeholder = "Ask me anything about your business... (Shift+Enter for new line)"
app_tips = "Ask about products, services, or company information"
app_shortcuts = "Enter to send â€¢ Shift+Enter for new line"

# Agent Configuration
agent_name = "bedrock-agent"
agent_description = "You are a helpful AI assistant"
agent_instructions = "You are a helpful AI assistant. Provide accurate and helpful responses to user questions."
agent_model_id = "anthropic.claude-3-haiku-20240307-v1:0"

# Knowledge Base Configuration
knowledge_base_name = "bedrock-kb"
knowledge_base_model_id = "amazon.titan-embed-text-v2:0"
kb_instructions_for_agent = "Use the knowledge base when users ask for specific information."

# Optional: Enable/Disable Features
enable_guardrails = true
enable_endpoints = true
enable_s3_lifecycle_policies = true
enable_access_logging = true

